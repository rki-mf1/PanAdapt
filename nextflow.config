params {
    output = 'results'
    publish_dir_mode = 'copy'
    input_genomes = "$baseDir/input/input_fasta/all_months_vaccinated_all_variants2.fasta"
    reference_fasta = "$baseDir/resources/NC_045512.2.fasta"
    reference_gff = "$baseDir/resources/NC_045512.2.gff3_db"
    parnas_threshold = 25
    codeml_template = "$baseDir/resources/codeml_template.ctl"
    codeml_models = [0, 1, 2, 7, 8]
    ref_id = "NC_045512.2"
    bakta_db = "$baseDir/resources/db-light"
}

profiles {

    local {
        process.executor = 'local'
        process.cpus = 12
        process.memory = '32GB'
        includeConfig 'configs/local.config'
    }

    conda {
        conda.enabled = true 
        includeConfig 'configs/conda.config'   
    }
    
    slurm {
        process.executor = 'slurm'
        executor.queueSize = 100
        executor.perCpuMemAllocation = true
        process.cpus = 100
        process.memoryPerCpu = '2 GB'
        includeConfig 'configs/slurm.config'
    }
}
